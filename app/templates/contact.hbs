    <div class="form-group has-feedback {{if isValidEmail "has-success"}}">
      <label>Your email address*:</label>
      {{input type="email" class="form-control" placeholder="Your email address" value=emailAddress autofocus="autofocus"}}
      {{#if isValidEmail}}<span class="glyphicon glyphicon-ok form-control-feedback"></span>{{/if}}
    </div>    <div class="form-group has-feedback {{if isMsgLongE
nough "has-success"}}">
      {{!-- has-success turns the box and icon green on success --}}
      <label>Your message*:</label>
      {{textarea class="form-control" placeholder="Your message. (At least 5 characters.)" rows="5" value=message}}
      {{#if isMsgLongEnough}}<span class="glyphicon glyphicon-ok form-control-feedback"></span>{{/if}}
      {{!-- shows icon if successful --}}
    </div>
    
    {{#unless responseMessage}}
    <div class="col-xs-10 col-xs-offset-1 col-sm-offset-0 col-sm-4 col-md-3">
        <button class="btn btn-primary btn-lg btn-block" disabled={{isDisabled}} {{action 'saveMessage'}}>Send Message</button>
    </div>
    {{else}}
      <div class="alert alert-success">{{responseMessage}}</div>
    {{/unless}}

